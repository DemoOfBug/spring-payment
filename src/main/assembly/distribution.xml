<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<includes>
				<include>license.txt</include>
				<include>notice.txt</include>
				<include>readme.txt</include>
			</includes>
			<outputDirectory/>
			<lineEnding>dos</lineEnding>
		</fileSet>
		<fileSet>
			<directory>target/site/reference</directory>
			<outputDirectory>docs/reference</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/site/apidocs</directory>
			<outputDirectory>docs/javadoc</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>./</directory>
			<excludes>
				<exclude>.gitignore</exclude>
				<exclude>src/</exclude>
				<exclude>target/</exclude>
				<exclude>*/target/</exclude>
			</excludes>
			<outputDirectory>projects/spring-payment</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../spring-mapper</directory>
			<excludes>
				<exclude>.gitignore</exclude>
				<exclude>target/</exclude>
				<exclude>*/target/</exclude>
			</excludes>
			<outputDirectory>projects/spring-mapper</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../insight-plugin</directory>
			<excludes>
				<exclude>.gitignore</exclude>
				<exclude>target/</exclude>
				<exclude>*/target/</exclude>
			</excludes>
			<outputDirectory>projects/insight-plugin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../samples</directory>
			<excludes>
				<exclude>.gitignore</exclude>
				<exclude>target/</exclude>
				<exclude>*/target/</exclude>
			</excludes>
			<outputDirectory>projects/samples</outputDirectory>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.springframework.payment:spring-payment-core</include>
				<include>org.springframework.payment:spring-payment-client-cybs</include>
			</includes>
			<binaries>
				<outputDirectory>dist/bin</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.springframework.payment:spring-payment-core</include>
				<include>org.springframework.payment:spring-payment-client-cybs</include>
			</includes>
			<binaries>
				<attachmentClassifier>sources</attachmentClassifier>
				<outputDirectory>dist/src</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
